{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run current C file",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "gcc \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
